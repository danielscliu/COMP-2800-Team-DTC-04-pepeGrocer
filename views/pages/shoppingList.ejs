<script>
    var foodItemsList = [];


    // ################## Array of the items On-click of submit #########################

    $(document).ready(function () {
        // COMMENTED OUT SECTION GOOD FOR TESTING
        $.ajax({
            type: 'POST',
            data: {
                "uid": 1
            },
            url: '/shoppingListStartUid'
        })

        $('#submitListBtn').on('click', function (e) {
            e.preventDefault();
            var totalCountItems = $('form').find('section').length;
            console.log(totalCountItems);
            for (let i = 1; i <= totalCountItems; i++) {
                var itemValues = document.getElementById(i).innerHTML;
                console.log((itemValues));
                foodItemsList.push(itemValues);
                console.log(foodItemsList);
                Array.from(foodItemsList);
            }

            $.ajax({
                type: 'POST',
                data: {
                    "uid": 1,
                    "array": foodItemsList
                },
                url: '/writeShoppingListToDatabase'
            })
        });
    });


</script>
<script>
    var itemNum = 1;

    $("#add").on("click", function () {

        var description = document.getElementById("inputBox").value;

        var shopList = `<section class="custom-control custom-checkbox name='items'">
        <input type="checkbox" class="custom-control-input" id="customCheck${itemNum}">
        <h5><label id='${itemNum}' style='color: white;' class="custom-control-label" for="customCheck${itemNum}">${description}</label></h5>
        </section>`
        $(".itemStockBox").append(shopList)
        itemNum++;
        document.getElementById('inputBox').value = '';
    });
</script>

